<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget0"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="20px"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/widget28"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Find a friend"
android:textSize="25sp"
android:layout_margin="10px" 
android:layout_centerHorizontal="true">
</TextView>
<TextView
android:id="@+id/labelName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Name:"
android:textSize="16sp" 
android:layout_below="@id/widget28" 
android:layout_alignParentLeft="true" 
android:layout_marginTop="20px">
</TextView>
<EditText
android:id="@+id/find_tName"
android:layout_width="wrap_content"
android:layout_height="35px"
android:layout_alignTop="@id/labelName" 
android:layout_toRightOf="@id/labelName"
android:layout_below="@id/widget28" 
android:layout_alignParentRight="true"
android:layout_marginLeft="20px"

>
</EditText>
<TextView
android:id="@+id/labelSurname"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Surname:"
android:textSize="16sp"
android:layout_below="@id/labelName" 
android:layout_alignParentLeft="true" 
android:layout_marginTop="40px">
>
</TextView>
<EditText
android:id="@+id/find_tSurname"
android:layout_width="wrap_content"
android:layout_height="35px"
android:layout_alignTop="@id/labelSurname" 
android:layout_toRightOf="@id/labelSurname"
android:layout_below="@id/find_tName" 
android:layout_alignParentRight="true"
android:layout_marginLeft="20px"
>
</EditText>
<TextView
android:id="@+id/labelCity"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Country:"
android:layout_below="@id/labelSurname" 
android:layout_alignParentLeft="true" 
android:layout_marginTop="40px">
>
</TextView>
<EditText
android:id="@+id/find_tCity"
android:layout_width="wrap_content"
android:layout_height="35px"
android:layout_alignTop="@id/labelCity" 
android:layout_toRightOf="@id/labelCity"
android:layout_below="@id/find_tSurname" 
android:layout_alignParentRight="true"
android:layout_marginLeft="20px"
>
</EditText>
<TextView
android:id="@+id/labelNick"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Nick:"
android:textSize="16sp"
android:layout_below="@id/labelCity" 
android:layout_alignParentLeft="true" 
android:layout_marginTop="40px">
>
</TextView>
<EditText
android:id="@+id/find_tNick"
android:layout_width="wrap_content"
android:layout_height="35px"
android:layout_alignTop="@id/labelNick" 
android:layout_toRightOf="@id/labelNick"
android:layout_below="@id/find_tCity" 
android:layout_alignParentRight="true"
android:layout_marginLeft="20px"
>
</EditText>
<Button
android:id="@+id/find_bSearch"
android:layout_width="100sp"
android:layout_height="35sp"
android:text="Search"
android:layout_below="@id/labelNick" 
android:layout_alignParentLeft="true" 
android:layout_marginTop="40px">
>
</Button>
<Button
android:id="@+id/find_bCancel"
android:layout_width="100sp"
android:layout_height="35sp"
android:text="Cancel"
android:layout_alignTop="@id/find_bSearch" 
android:layout_toRightOf="@id/find_bSearch"
android:layout_below="@id/find_tNick" 
android:layout_alignParentRight="true"
android:layout_marginLeft="20sp"
>
</Button>
</RelativeLayout>
