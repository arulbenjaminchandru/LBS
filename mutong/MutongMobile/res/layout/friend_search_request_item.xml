<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:gravity="center_vertical">
	<ImageView android:id="@+id/friend_avatar" android:src="@drawable/lou"
		android:layout_gravity="left" android:layout_width="60dp"
		android:layout_height="60dp" />
	<TextView android:id="@+id/friend_user_name"
		android:paddingLeft="20dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="20dp" />
	<TextView android:id="@+id/friend_real_name"
		android:paddingLeft="10dp" android:paddingRight="20dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="20dp" />
</LinearLayout>
