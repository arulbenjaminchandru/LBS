<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:paddingLeft="8dp"
	android:paddingRight="8dp">

	<TextView android:id="@+id/friend_request" android:gravity="center"
		android:textSize="25dp" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:clickable="true"
		android:paddingLeft="5dp" android:textColor="#0000FF" android:text="@string/no_friend_request"
		android:visibility="gone" />
	<ExpandableListView android:id="@id/android:list"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:layout_weight="1" android:drawSelectorOnTop="false" />

	<TextView android:id="@id/android:empty" android:layout_width="match_parent"
		android:layout_height="match_parent" android:text="No data" />
</LinearLayout>
