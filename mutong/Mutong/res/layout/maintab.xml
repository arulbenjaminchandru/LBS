<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TabWidget android:id="@android:id/tabs"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />

		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/tag1" android:layout_width="wrap_content"
				android:layout_height="fill_parent">

				<com.google.android.maps.MapView
					android:id="@+id/map" android:layout_width="fill_parent"
					android:layout_height="320dp" android:enabled="true"
					android:clickable="true" android:apiKey="0s0LlVIxKHSSMWmOxXSCjy6zSYV0kSmMXxKDbpQ" />
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:orientation="horizontal" android:paddingBottom="-1px"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_below="@id/map">

					<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						android:orientation="vertical" android:layout_width="320px"
						android:layout_height="wrap_content" android:background="@drawable/tab_one_normal">
						<TextView android:id="@+id/bottommenu_map"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:layout_gravity="left" android:paddingTop="32px"
							android:background="@drawable/home" />
					</LinearLayout>
				</LinearLayout>
			</RelativeLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/tag2" android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ExpandableListView android:id="@+id/appList"
					android:layout_width="fill_parent" android:layout_height="fill_parent"
					/>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/tag3" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/tag4" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</LinearLayout>
		</FrameLayout>
	</LinearLayout>

</TabHost>  
