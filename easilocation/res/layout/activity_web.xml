<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	
	<LinearLayout
		android:id="@+id/title_bar_home"
		android:layout_width="fill_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		android:background="@color/title_background">
		
		<TextView style="@style/TitleBarText" />
		
		<ImageView style="@style/TitleBarSeparator" />
		
		<ImageButton 
            android:id="@+id/btn_title_home"
			android:layout_width="45dp"
			android:layout_height="fill_parent"
			android:background="@drawable/title_button"
            android:contentDescription="Back to log in activity"
            android:src="@drawable/ic_title_home"
            android:onClick="onBackButtonClick"/>
	</LinearLayout>
	
	<ScrollView
		android:id="@+id/scrollView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView android:layout_width="fill_parent"
				android:layout_marginLeft="10dip" android:id="@+id/textView1"
				android:layout_marginRight="10dip" android:layout_height="wrap_content"
				android:text="@string/username" android:layout_marginTop="10dip"></TextView>
			<EditText android:id="@+id/editText1" android:layout_width="fill_parent"
				android:layout_marginLeft="10dip"
				android:singleLine="true" android:layout_marginRight="10dip"
				android:ellipsize="end" android:layout_height="wrap_content"
				android:layout_marginTop="10dip"></EditText>
			<TextView android:layout_width="fill_parent"
				android:layout_marginLeft="10dip" android:id="@+id/textView2"
				android:layout_marginRight="10dip" android:layout_height="wrap_content"
				android:text="@string/password" android:layout_marginTop="10dip"></TextView>
			<EditText android:id="@+id/editText2" android:layout_width="fill_parent"
				android:layout_marginLeft="10dip"
				android:singleLine="true" android:layout_marginRight="10dip"
				android:password="true" android:layout_height="wrap_content"
				android:layout_marginTop="10dip"></EditText>
			<TextView android:layout_width="fill_parent"
				android:layout_marginLeft="10dip" android:id="@+id/textView4"
				android:layout_marginRight="10dip" android:layout_height="wrap_content"
				android:text="@string/email" android:layout_marginTop="10dip"></TextView>
			<EditText android:id="@+id/editText3" android:layout_width="fill_parent"
				android:layout_marginLeft="10dip"
				android:singleLine="true" android:layout_marginRight="10dip"
				android:ellipsize="end" android:layout_height="wrap_content"
				android:layout_marginTop="10dip"></EditText>
			<TextView android:layout_width="fill_parent"
				android:layout_marginLeft="10dip" android:id="@+id/textView5"
				android:layout_marginRight="10dip" android:layout_height="wrap_content"
				android:text="@string/phone_number" android:layout_marginTop="10dip"></TextView>
			<EditText android:id="@+id/editText4" android:layout_width="fill_parent"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" android:layout_height="wrap_content"
				android:phoneNumber="true" android:layout_marginTop="10dip"></EditText>
			<TextView android:layout_width="fill_parent"
				android:layout_marginLeft="10dip" android:id="@+id/textView3"
				android:layout_marginRight="10dip" android:layout_height="wrap_content"
				android:text="@string/birthday" android:layout_marginTop="10dip"></TextView>
			<DatePicker 
				android:id="@+id/datePicker1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip" 
				android:layout_marginRight="10dip" 
				android:layout_marginTop="10dip" />
			<Button android:layout_width="wrap_content" android:id="@+id/button1"
				android:layout_margin="10dip" android:text="@string/signup"
				android:layout_gravity="center" android:layout_height="wrap_content" 
				android:onClick="onSignUpClick"/>
		</LinearLayout>
	</ScrollView>
	
</LinearLayout>