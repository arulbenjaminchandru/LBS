<?xml version="1.0" encoding="utf-8"?>
<manifest 
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="ntu.sce.fyp.easilocation" 
	android:versionCode="1"
	android:versionName="0.1.0">
	
	<application 
		android:icon="@drawable/icon" 
		android:label="@string/app_name"
		android:debuggable="true">
		
		<activity 
			android:name=".ui.LoginActivity"
			android:screenOrientation="portrait"
			android:windowSoftInputMode="adjustResize" 
			android:theme="@style/Theme.Easilocation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity
			android:name=".ui.WebActivity"
			android:windowSoftInputMode="adjustResize"
			android:theme="@style/Theme.Easilocation" />
		<activity
			android:name=".ui.HomeActivity"
			android:theme="@style/Theme.Easilocation" />
		<activity
			android:name=".ui.FriendsActivity"
			android:theme="@style/Theme.Easilocation" />
		<activity 
			android:name=".ui.MapDetailActivity"
			android:theme="@style/Theme.Easilocation"/>
		<activity
			android:name=".ui.NearByActivity"
			android:theme="@style/Theme.Easilocation" />
		<activity 
			android:name=".ui.AboutActivity"
			android:theme="@style/Theme.Easilocation"/>
		<activity 
			android:name=".ui.AddFriendActivity"
			android:theme="@style/Theme.Easilocation"/>
		<activity 
			android:name=".ui.FriendsListActivity"
			android:theme="@style/Theme.Easilocation"/>
		<activity 
			android:name=".ui.FriendsTabActivity"
			android:theme="@style/Theme.Easilocation"/>
		<activity 
			android:name="ui.MyLocationActivity"
			android:theme="@style/Theme.Easilocation"/>
		<activity 
			android:name=".util.UIUtils"
			android:theme="@style/Theme.Easilocation"/>
		<service 
			android:enabled="true" 
			android:name=".GeoDecoderService"/>
		
		<uses-library android:name="com.google.android.maps" />
		
	</application>

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.READ_HISTORY_BOOKMARKS" />
	<uses-permission android:name="android.permission.WRITE_HISTORY_BOOKMARKS" />
	
</manifest> 